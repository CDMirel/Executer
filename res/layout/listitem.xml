<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout	xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" >
	<ImageView	android:id="@+id/listItemImage"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="4dp"
				android:paddingRight="4dp"
				android:contentDescription="@string/list_item_image_descr"
				android:layout_alignParentLeft="true"
				android:src="@drawable/folder"/>
	<LinearLayout	android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toRightOf="@+id/listItemImage"
					android:orientation="vertical">	
		<TextView	android:text="@string/folder"
					android:id="@+id/listItemName"
					android:textColor="#fff"
					android:textStyle="bold"
					android:textSize="18sp"
					android:singleLine="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
		<TextView	android:text="@string/folder_descr"
					android:id="@+id/listItemDescr"
					android:textColor="#868686"
					android:textStyle="bold"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
	</LinearLayout>
</RelativeLayout>